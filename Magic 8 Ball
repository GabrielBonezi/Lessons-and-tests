//I used 3 different ways to create the magic 8 ball, the one I like most is the switch, therefore is the one not commented out.

userName = '';
userQuestion = 'what is your luck today?';
randomNumber = Math.floor(Math.random()*8);
eightBall = ''

switch (userName) {
  case '':
  console.log(`Hello!`);
  break;
  case userName:
  console.log (`Hello ${userName}!`);
}
console.log(`Hey ${userName}, ${userQuestion}`)
console.log (' ')
